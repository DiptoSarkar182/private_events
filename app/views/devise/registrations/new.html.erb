<h2 class="text-2xl font-bold mb-4">Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), class: "max-w-md") do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="mb-4">
    <%= f.label :first_name, class: "block font-bold mb-2" %><br />
    <%= f.text_field :first_name, autofocus: true, autocomplete: "first name", class: "border border-gray-400 p-2 w-full" %>
  </div>

  <div class="mb-4">
    <%= f.label :last_name, class: "block font-bold mb-2" %><br />
    <%= f.text_field :last_name, autofocus: true, autocomplete: "last name", class: "border border-gray-400 p-2 w-full" %>
  </div>

  <div class="mb-4">
    <%= f.label :email, class: "block font-bold mb-2" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "border border-gray-400 p-2 w-full" %>
  </div>

  <div class="mb-4">
    <%= f.label :password, class: "block font-bold mb-2" %>
    <% if @minimum_password_length %>
      <em class="text-gray-600">(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", class: "border border-gray-400 p-2 w-full" %>
  </div>

  <div class="mb-4">
    <%= f.label :password_confirmation, class: "block font-bold mb-2" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "border border-gray-400 p-2 w-full" %>
  </div>

  <div class="mb-4">
    <%= f.submit "Sign up", class: "bg-blue-500 text-white py-2 px-4 rounded hover:bg-blue-600" %>
  </div>
<% end %>

