<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
  <p class="text-3xl font-bold text-gray-800 mb-6">All the events</p>

  <div class="mb-8">
    <p class="text-lg font-semibold mb-2">Future Events (<%= @future_events.count %>)</p>
    <div class="bg-white shadow overflow-hidden rounded-md">
      <% if @future_events.any? %>
        <ul class="divide-y divide-gray-200">
          <% @future_events.each do |event| %>
            <li class="px-4 py-5 sm:px-6">
              <%= render event %>
            </li>
          <% end %>
        </ul>
      <% else %>
        <div class="px-4 py-5 sm:p-6">
          <p>There are no future events.</p>
        </div>
      <% end %>
    </div>
  </div>

  <div class="mb-8">
    <p class="text-lg font-semibold mb-2">Past Events (<%= @past_events.count %>)</p>
    <div class="bg-white shadow overflow-hidden rounded-md">
      <% if @past_events.any? %>
        <ul class="divide-y divide-gray-200">
          <% @past_events.each do |event| %>
            <li class="px-4 py-5 sm:px-6">
              <%= render event %>
            </li>
          <% end %>
        </ul>
      <% else %>
        <div class="px-4 py-5 sm:p-6">
          <p>There are no past events.</p>
        </div>
      <% end %>
    </div>
  </div>
</div>