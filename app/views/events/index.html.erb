<h2>All the events</h2>
<div>
  <p>Future Events (<%= @future_events.count %>)</p>
  <div>
    <% if @future_events.any? %>
      <% @future_events.each do |event| %>
      <%= render event%>
        <hr>
      <% end %>
    <% else %>
      <p>There are no future events.</p>
    <%end %>
  </div>
</div>

<div>
  <p>Past Events (<%= @past_events.count %>)</p>
  <div>
    <% if @past_events.any? %>
      <% @past_events.each do |event| %>
        <%= render event%>
        <hr>
      <% end %>
    <% else %>
      <p>There are no past events.</p>
      <%end %>
  </div>
</div>